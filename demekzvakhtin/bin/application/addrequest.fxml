<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddRequestController">
    <Label text="Добавление заявки" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label text="Номер заявки:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="requestIDField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Дата добавления:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="startDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Вид бытовой техники:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="homeTechTypeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Описание проблемы:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextArea fx:id="problemDescriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Статус заявки:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="requestStatusField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Id клиента:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="clientId" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Button text="Добавить заявку" onAction="#handleAddRequestButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <Button text="Редактировать заявку" onAction="#handleEditButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="9" />
    <Button text="Просмотр таблицы и удалить заявку" onAction="#handleDeleteButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="10" />
</GridPane>
