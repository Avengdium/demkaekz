<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EditRequestController">
    <Label text="Редактирование заявки" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label text="Номер заявки:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="requestIDField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Новый статус заявки:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="newStatusField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Новое описание проблемы:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextArea fx:id="newProblemDescriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Новый ответственный:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="newResponsibleField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button text="Сохранить изменения" onAction="#handleSaveChangesButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="5" />
</GridPane>
